$accentColor = #1E4042
//TODO: $accentDarkColor
$baseFont = 'Abraham', 'Roboto', Arial
@import "_snowoverride"
$navbar-horizontal-padding = 1.5rem

body
    direction rtl !important
    text-align right !important
    font-family $baseFont !important

.personal-info-wrapper .personal-img
    width 12rem !important
    height 8rem !important
    border-radius 0 !important
    margin: 1rem auto 1rem !important

.navbar
    .logo
        margin-left 0.8rem !important
    .links
        padding-right 1.5rem !important
        padding-left 0
        left $navbar-horizontal-padding !important
        right auto 
    .color-picker
        margin-left 1em
        margin-right 0
    .nav-item
        margin-left 0
        margin-right 1.5rem
    .nav-item:first-child
        margin-right 0
    .nav-item:last-child
        display none
    .sidebar-button
        right 1rem
        left auto

@media (max-width: 719px)
    .navbar
        padding-left 0 !important
        padding-right 4rem

.sidebar-open
    transform none

.sidebar
    right 0
    left auto
    transform translateX(100%);
    border-left 1px solid var(--border-color)
    border-right none
    .nav-links .nav-item, .nav-links .repo-link
        padding 0.5rem 1.5rem 0.5rem 0
    .num
        display none !important
    .nav-item:last-child
        display none

.color-picker-menu
    text-align left
    direction ltr

// @vuepress/plugin-search
.search-box
    margin-right 0 !important
    margin-left 1rem
    input
        padding 0 2rem 0 0.5rem !important
        background-position-x calc(100% - .6em) !important
    .iconfont
        left: auto
        right 0.6rem

// @vuepress/plugin-back-to-top"
.back-to-ceiling
    right auto !important
    left 2.5rem !important

// vuepress-plugin-container
.vue-container
    direction ltr !important
    text-align left !important

.content__default
    div[class*="language-"]
            direction ltr !important

.home-blog .home-blog-wrapper .info-wrapper
    margin-right 15px
    margin-left 0

@media (max-width: 719px)
    .home-blog .home-blog-wrapper .info-wrapper
        margin-right 0
    .blog-list
        margin: 0 auto 20px;
    
.personal-info-wrapper .num > div[data-v-50777274]:first-child
    border-left 1px solid #333
    border-right none

.home-blog .home-blog-wrapper .info-wrapper .category-wrapper
    padding-right 0

h2
    padding-left: 0
    padding-right: 0.8rem

h2::before
    position absolute
    right 0
    bottom 0
    display block
    height 1.8rem
    content ''
    border-right 5px solid #1e4042
    border-left none !important

.categories-wrapper .category-wrapper .category-item a .post-num
    margin-right 4px !important
    margin-left 0 !important